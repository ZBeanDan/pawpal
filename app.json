{
  "expo": {
    "name": "PawPal",
    "slug": "pawpal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "pawpal",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.pawpal.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "PawPal需要访问相机来拍摄宠物照片",
        "NSPhotoLibraryUsageDescription": "PawPal需要访问相册来选择宠物照片",
        "NSPhotoLibraryAddUsageDescription": "PawPal需要保存宠物照片到相册"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.pawpal.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "PawPal需要访问您的照片来记录宠物趣事",
          "cameraPermission": "PawPal需要访问相机来拍摄宠物照片"
        }
      ],
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "pawpal-pet-moments"
      }
    },
    "owner": "your-expo-username"
  }
}
